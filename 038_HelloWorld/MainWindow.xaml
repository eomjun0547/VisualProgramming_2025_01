<Window x:Class="_038_HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_038_HelloWorld"
        mc:Ignorable="d"
        Title="Hello World" Height="450" Width="500">
    <Grid x:Name="grid1" Background="Orange" MouseDown="grid1_MouseDown">
        <TextBlock FontSize="72"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown"> 
        Hello World!
        </TextBlock>
        
    </Grid>
</Window>
