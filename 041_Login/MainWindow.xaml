<Window x:Class="_041_Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_041_Login"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid Background="LightSteelBlue">
        <StackPanel Margin="50" Background="AliceBlue">
            <!-- 1층 -->
            <TextBlock HorizontalAlignment="Center"
                       FontSize="20" FontWeight="Bold"
                       Padding="10">
                로그인
            </TextBlock>
            <!-- 2층 -->
            <StackPanel Orientation="Horizontal" Margin="0 20 0 10">
                <TextBlock Width="100" FontSize="20"
                           TextAlignment="Right"
                           Margin="0 0 10 0">
                    Id : 
                </TextBlock>
                <TextBox x:Name="txtId" Width="180"
                         FontSize="20"></TextBox>
            </StackPanel>
            <!-- 3층 -->
            <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
                <TextBlock Width="100" FontSize="20"
               TextAlignment="Right"
               Margin="0 0 10 0">
                    PassWord : 
                </TextBlock>
                <PasswordBox x:Name="txtPassWord" Width="180"
                             FontSize="20"></PasswordBox>
            </StackPanel>
            <!-- 4층 -->
            <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
                <TextBlock Width="100" FontSize="20"
                           TextAlignment="Right"
                           Margin="0 0 10 0">
                </TextBlock>
                <Button  x:Name="btnLogin" Width="180" FontSize="20" Click="btnLogin_Click">
                    Login
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
