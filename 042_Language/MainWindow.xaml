<Window x:Class="_042_Language.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_042_Language"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <StackPanel Background="AliceBlue" Margin="20">
        <TextBlock HorizontalAlignment="Center" Margin="0 10">■좋아하는 언어를 선택하세요!</TextBlock>
        <Separator Margin="10"></Separator>
        <CheckBox x:Name="cbC" Margin="30 5 0 0">C</CheckBox>
        <CheckBox x:Name="cbCPP" Margin="30 5 0 0">C++</CheckBox>
        <CheckBox x:Name="cbCS" Margin="30 5 0 0">C#</CheckBox>
        <CheckBox x:Name="cbPY" Margin="30 5 0 0">Python</CheckBox>
        <CheckBox x:Name="cbJava" Margin="30 5 0 0">Java</CheckBox>
        <Separator Margin="10"></Separator>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="btnSubmit" Width="80" Height="25" 
                    Margin="0 10 10 0"
                    Click="btnSubmit_Click">투표하기</Button>
            <Button x:Name="btnExit" Width="80" Height="25" 
                    Margin="0 10 10 0"
                    Click="btnExit_Click">끝내기</Button>
        </StackPanel>
    </StackPanel>
</Window>
